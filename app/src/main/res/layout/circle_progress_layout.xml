<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <include layout="@layout/title_bar" />

    <com.hzq.widgets.CircleProgressBar
        android:id="@+id/circleProgressBar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:perent="个"
        app:desc="进行中"
        app:main_text_color="@color/material_yellow"
        app:desc_text_color="@color/material_blue"
        app:progress_color="@color/material_green"
        app:progress_down_color="@color/material_red"
        app:progress_stroke_width="10dp"
        app:number_text_size="26sp"
        app:desc_text_size="12sp"
        />

    <com.hzq.widgets.CircleProgressBar
        android:id="@+id/circleProgressBar1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:perent="个"
        app:desc="进行中"
        app:main_text_color="@color/material_yellow"
        app:desc_text_color="@color/material_blue"
        app:progress_color="@color/material_green"
        app:progress_down_color="@color/material_red"
        app:progress_stroke_width="10dp"
        app:is_draw_circle="true"
        />

    <com.hzq.widgets.CircleProgressBar
        android:id="@+id/circleProgressBar2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:perent="个"
        app:desc="进行中"
        app:main_text_color="@color/material_yellow"
        app:desc_text_color="@color/material_blue"
        app:progress_color="@color/material_green"
        app:progress_down_color="@color/material_red"
        app:progress_stroke_width="10dp"
        app:is_draw_circle="false"
        />
</LinearLayout>